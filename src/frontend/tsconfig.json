{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "components.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "lib": [
      "es2016",
      "dom",
      "es2018",
      "es2018.promise"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@service/*": [
        "./src/domain/service/*"
      ],
      "@model/*": [
        "./src/domain/model/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@router/*": [
        "./src/router/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@directives/*": [
        "./src/directives/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@css/*": [
        "./src/css/*"
      ],
      "@language/*": [
        "./src/language/*"
      ],
    },
    "types": [
      "bkui-vue/lib/volar.components"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}